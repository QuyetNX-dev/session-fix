extends ../layouts/common.pug
block content

  if errors
    each error in errors
      div.alert.alert-warning= error

  form(method="POST")
    div(class="mb-3")
      p(style="margin-bottom: 5px") Tài khoản:
      input(class="form-control" type="text" name="email" value= values ? values.email : "")
    div.mb-3
      p(style="margin-bottom: 5px") Password:
      input(class="form-control" type="password" name="password" value= values ? values.password : "")    
    div     
      button(class="btn btn-primary pl-5 pr-5") Đăng nhập